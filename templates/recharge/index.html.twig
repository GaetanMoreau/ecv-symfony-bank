{% extends 'base.html.twig' %}

{% block title %}Hello RechargeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for accountId, accountRecharges in recharges %}
        <h2>Recharge pour le compte {{ accountId }}</h2>
        <table>
            <thead>
            <tr>
                <th>Montant</th>
                <th>Date</th>
                <th>Compte</th>
                <th>Carte</th>
            </tr>
            </thead>
            <tbody>
            {% for recharge in accountRecharges %}
                <tr>
                    <td>{{ recharge.getMontant() }} €</td>
                    <td>{{ recharge.getRechargeDate()|date('d/m/Y H:i:s') }}</td>
                    <td>{{ recharge.getCompte() }}</td>
                    <td>{{ recharge.getCarte() }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endfor %}
    <a class="btn" href="{{ path("app_recharge_add") }}">Recharger un compte</a>
    <a class="btn" href="{{ path("app_account") }}">Retour à la liste des comptes</a>
</div>
{% endblock %}
