{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

    table th, table td {
        padding: 12px 15px;
        text-align: left;
        border: 1px solid #ddd;
    }

    table th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    a {
        display: inline-block;
        text-decoration: none;
        color: #007bff;
        border: 1px solid #007bff;
        border-radius: 4px;
        padding: 10px 20px;
        transition: background-color 0.2s ease;
    }

    a:hover {
        background-color: #007bff;
        color: #fff;
    }

    .btn {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        transition: background-color 0.2s ease;
    }

    .btn:hover {
        background-color: #0062cc;
    }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur votre tableau de bord ! {{ app.user }}</h1>
        <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Compte</th>
                <th>Status</th>
                <th>Solde</th>
            </tr>
            </thead>
            <tbody>
            {% for account in accounts %}
                <tr>
                    <td>{{ account.nom }}</td>
                    <td>{{ account.id }}</td>
                    <td>{{ account.status ? 'Actif' : 'Inactif' }}</td>
                    <td>{{ account.solde }} €</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <a class="btn" href="{{ path("app_account_add") }}">Créer un nouveau compte</a>
</div>
{% endblock %}
