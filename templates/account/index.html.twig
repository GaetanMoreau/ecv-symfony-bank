{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur votre tableau de bord ! <span class="title__name">{{ app.user }}</span></h1>
        <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Compte</th>
                <th>Status</th>
                <th>Solde</th>
            </tr>
            </thead>
            <tbody>
            {% for account in accounts %}
                <tr>
                    <td>{{ account.nom }}</td>
                    <td>{{ account.id }}</td>
                    <td>{{ account.status ? 'Actif' : 'Inactif' }}</td>
                    <td>{{ account.solde }} €</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <a class="btn" href="{{ path("app_account_add") }}">Créer un nouveau compte</a>
    <a class="btn" href="{{ path("app_transaction") }}">Voir les virements</a>
    <a class="btn" href="{{ path("app_recharge") }}">Voir les recharges</a>
</div>
{% endblock %}
